#!/usr/bin/env ruby

require './lib/console'
require 'tictactoe_board'
require 'tictactoe_rules'
require 'player_ai'
require 'player_user'
require 'console_game_engine'

console = Console.new
board = TictactoeBoard.new
rules = TictactoeRules.new
user_player = PlayerUser.new
comp_player = PlayerAi.new
new_game = ConsoleGameEngine.new({ttt_board: board, rules: rules, player_1: user_player, player_2: comp_player, ui: console})
new_game.play