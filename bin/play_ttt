#!/usr/bin/env ruby

require './lib/console'
require 'tictactoe_board'
require 'tictactoe_rules'
require 'player_ai'
require 'player_user'
require 'console_game_engine'

console = Console.new
ttt_board = TictactoeBoard.new
rules = TictactoeRules.new
comp_player = PlayerAi.new
user_player = PlayerUser.new
new_game = ConsoleGameEngine.new({gametype: ttt_board, rules: rules, first_player: user_player, comp_player: comp_player, ui: console})
new_game.play